@model IEnumerable<Zaliczenie.Models.News>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
    @foreach (var item in Model)
    {
        <div class="col-md-8">
            <a href="@Html.DisplayFor(modelItem => item.Link)">
                <img style="float:right;height:200px;width:auto" src="@Html.DisplayFor(modelItem => item.Img)" />
            </a>
        </div>
        <div class="col-md-4">
            <div>@Html.DisplayFor(modelItem => item.Title)</div>
            <a asp-action="Edit" style="text-align:center" asp-route-id="@item.Title">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Title">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Title">Delete</a>
        </div>
    }
<p style="clear:both;"></p>
