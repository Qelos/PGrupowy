@model IEnumerable<Zaliczenie.Models.News>
@{
    ViewData["Title"] = "Wiadomosci";
}

<h2>Wiadomości</h2>

@foreach (var item in Model)
{
    <div class="col-md-8">
        <a href="@Html.DisplayFor(modelItem => item.Link)">
            <img style="float:right;height:200px;width:350px" src="@Html.DisplayFor(modelItem => item.Img)" />
        </a>
    </div>
    <div class="col-md-4">
        <a href="@Html.DisplayFor(modelItem => item.Link)">
            <br /><br /><br />
            <h4 style="text-align:center">@Html.DisplayFor(modelItem => item.Title)</h4>
            </a>
    </div>
}
<p style="clear:both;"></p>
